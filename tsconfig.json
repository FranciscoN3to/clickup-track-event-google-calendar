{
    "compilerOptions": { 
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "ES2017",
        // "sourceMap": true,
        "incremental": true,
        "skipLibCheck": false,

 
  
        "moduleResolution": "Node",
     
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "isolatedModules": false,
        "strict": true,
        "noImplicitAny": true,
        "useUnknownInCatchVariables": false,
        "inlineSourceMap": true,

        "types": [
            "node"
        ],
        "outDir": "./dist",
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ],
        "paths": {
            "@providers/*": ["src/providers/*"],
        }
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules"
    ]
}