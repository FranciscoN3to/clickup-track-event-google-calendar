{
    "compilerOptions": { 
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "ES2017",
        "sourceMap": true,
        "incremental": true,
        "skipLibCheck": false,
        "types": [
            "node"
        ],
        "outDir": "./dist",
        "baseUrl": ".",
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ],
        "paths": {
            "@providers/*": ["src/providers/*"],
        }
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules"
    ]
}